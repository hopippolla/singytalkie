<div>
  <div class="container">
    <h1><%= @playlist.title.capitalize %></h1>
    <ol><% @playlist.bookmarks.each do |bookmark|%>
      <li><%= bookmark.song.title %></li>

    <%end %>
    </ol>
  </div>
  <div>
    <h3 class="text-center watch-text">Add a song to the playlist</h3>
    <%= simple_form_for [@playlist, @bookmark] do |f| %>
      <%= f.association :song, label:false, collection: @songs, prompt: 'Choose a song', input_html: { class: 'form-select' } %>
      <%= f.button :submit, 'Add Song', class: "button button-back button-a" %>
      <% end %>
  </div>

  <%= link_to 'Back', playlists_path, class: "button button-back button-a" %>
  <%= link_to "Edit Playlist", edit_playlist_path(@playlist), method: 'GET', class: "button button-back button-a"%>
  <%= link_to "Delete Playlist", playlist_path(@playlist), method: 'DELETE', data: { confirm: 'Are you sure?' }, class: "button button-back button-a" %>
</div>
