<div class="page-wrap cards-wrap">
  <h1 class="txt-blue-md">PICK A SONG! START LEARNING!</h1>

  <section class="random">
    <h4><%= "Don't know what to listen to to?".upcase%></h4>
    <div class="button button-submit">
      <%= link_to 'Pick a song for me!', random_path %>
    </div>
  </section>

  <div data-controller="search-songs">
    <%= form_with url: songs_path, method: :get, html: { class:
      'mb-4', data: { search_songs_target: 'form' } } do |f| %>
      <%= f.text_field :query,
                      class: "form-control",
                      placeholder: 'Type a song title',
                      value: params[:query],
                      data: { search_songs_target: 'input',
                              action: 'keyup->search-songs#update' } %>
    <% end %>

    <%= render "list", songs: @songs %>
  </div>
</div>
